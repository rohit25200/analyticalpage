{
  "name": "cap-alp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": ">=5",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.108.8",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run --port 4005",
    "watch-alp-v4": "cds watch --open alp-v4/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-ui5app": "cds watch --open ui5app/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-sapui5app": "cds watch --open sapui5app/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/alp-v4"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      }
    }
  }
}
